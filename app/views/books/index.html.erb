<h1>Books</h1>
<tr>
  <th>
    <h4>Title</h4>
  </th>
  <th>
    <h4>Body</h4>
  </th>
</tr>

<% @books.each do |book| %>
  <table>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", "/books/#{book.id}" %></td>
      <td><%= link_to "Edit", "/books/#{book.id}" %></td>
      <td><%= link_to "Destroy", "/books/#{book.id}" %></td>
    </tr>
  </table>
<% end %>

<h2>New book</h2>
<%= form_with model: @books do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>